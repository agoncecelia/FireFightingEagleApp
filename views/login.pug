html
    head
        title Login
        link(rel='stylesheet', href='/css/login.css')
        include includes/header
    body
        div.container
            div.col-md-4.col-md-offset-4.login-container
                div.login-main-div
                    legend Login
                    div.login-inputs-div
                        form(action='/authenticate', method='post')
                            div.form-group
                                if(error)
                                    div.alert.alert-danger #{error}
                            div.form-group
                                input.form-control(type='text', name='username', placeholder='username', required='required')
                            div.form-group
                                input.form-control(type='password', name='password', placeholder='password', required='required')
                            div.col-md-6.form-group.text-left
                                button.btn(type='button', onclick='location.href="/register"') Register
                            div.col-md-6.form-group.text-right
                                button.btn(type='submit') Login
                            div.form-group.text-right
                                //a(href='#') Forgot password?
                            br

